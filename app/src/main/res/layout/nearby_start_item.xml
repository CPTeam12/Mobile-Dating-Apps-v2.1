<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/start_nearby_avatar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar" />

    <ImageView
        android:alpha="0.6"
        android:background="@color/md_black_1000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="fill_parent">
        <ImageView
            android:src="@drawable/place_icon"
            android:layout_width="60dp"
            android:layout_height="fill_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <!--<TextView-->
                <!--android:id="@+id/friend_nearby_title"-->
                <!--android:text="5 Friends nearby"-->
                <!--android:textSize="20sp"-->
                <!--android:textColor="@color/md_white_1000"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:paddingBottom="6dp"-->
                <!--android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/friend_nearby"
                android:text="5 Friends nearby"
                android:textSize="15sp"
                android:textColor="@color/md_white_1000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/people_nearby"
                android:text="5 peoples you might want to know"
                android:textSize="15sp"
                android:textColor="@color/md_white_1000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>