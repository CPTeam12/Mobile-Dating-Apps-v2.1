<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <FrameLayout
        android:id="@+id/login_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="80dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/facebook_sign_in"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#ff46639d"
                        android:drawableLeft="@drawable/facebook_login"
                        android:drawablePadding="2dp"
                        android:text="@string/action_sign_in_facebook"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />



                    <Button
                        android:id="@+id/goolge_sign_in"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#ffdd4c3a"
                        android:drawableLeft="@drawable/google_login"
                        android:drawablePadding="2dp"
                        android:text="@string/action_sign_in_google"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <!--<EditText-->
                    <!--android:id="@+id/login_email"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="@string/prompt_email"-->
                    <!--android:inputType="textEmailAddress"-->
                    <!--android:maxLines="1"-->
                    <!--android:singleLine="true"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:textColorHint="#ffffff"-->
                    <!--android:textIsSelectable="false" />-->

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_email"
                        app:met_baseColor="@color/md_white_1000"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/md_white_1000"
                        app:met_errorColor="#ffdd4c3a"
                        app:met_textColorHint="@color/md_white_1000"/>

                    <!--<EditText-->
                    <!--android:id="@+id/password"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="@string/prompt_password"-->
                    <!--android:imeActionId="1"-->
                    <!--android:imeActionLabel="@string/action_sign_in_short"-->
                    <!--android:imeOptions="actionUnspecified"-->
                    <!--android:inputType="textPassword"-->
                    <!--android:maxLines="1"-->
                    <!--android:singleLine="true"-->
                    <!--android:textColor="#ffffff"-->
                    <!--android:textColorHighlight="#ffffff"-->
                    <!--android:textColorHint="#ffffff" />-->

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_password"
                        android:inputType="textPassword"
                        app:met_baseColor="@color/md_white_1000"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/md_white_1000"
                        app:met_errorColor="#ffdd4c3a"
                        app:met_textColorHint="@color/md_white_1000"/>


                    <TextView
                        android:id="@+id/login_error"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="0dp"
                        android:text="login error"
                        android:textColor="#ffdd4c3a"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/email_sign_in_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:background="#ce2aa7d6"
                        android:text="@string/action_sign_in"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>

